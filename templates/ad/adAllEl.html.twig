
<div class="col">
    <div class="card shadow-sm  ">
        <div id="carouselExampleIndicators{{ ad.id }}"
             class="carousel slide card-img-top">
            <div class="carousel-indicators">
                <button type="button"
                        data-bs-target="#carouselExampleIndicators{{ ad.id }}"
                        data-bs-slide-to="0" class="active"
                        aria-current="true"></button>
                {% if ad.images|length>1 %}
                    {% for i in range(0,ad.images|length -2) %}
                        <button type="button"
                                data-bs-target="#carouselExampleIndicators{{ ad.id }}"
                                data-bs-slide-to="{{ i+1 }}"></button>
                    {% endfor %}
                {% endif %}
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100"
                         src="{{ '/images/'~ ad.images[0].filename }}">
                </div>
                {% for im in ad.images[1:] %}
                    <div class="carousel-item">
                        <img class="d-block w-100"
                             src="{{ '/images/'~ im.filename }}">
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="card-body ">
            <h5 class="card-title">
                {% if is_granted('ROLE_AGENT') %}
                    <a href="{{ path('agent_ad_one', {'id_agent':app.user.id,'id_ad': ad.id}) }}">
                        {{ ad.city ~", "~ ad.address ~", "~ ad.sqr }}
                        <span style="white-space: nowrap;"> м<sup>2</sup></span>
                    </a>
                {% elseif ad.owner.id == app.user.id %}
                    <a href="{{ path('general_ad_one', {'id_ad': ad.id}) }}">
                        {{ ad.city ~", "~ ad.address ~", "~ ad.sqr }}
                        <span style="white-space: nowrap;"> м<sup>2</sup></span>
                    </a>
                {% else %}
                    <a href="{{ path('general_ad_one', {'id_ad': ad.id}) }}">
                        {{ ad.city ~", "~ ad.address ~", "~ ad.sqr }}
                        <span style="white-space: nowrap;"> м<sup>2</sup></span>
                    </a>
                {% endif %}

            </h5>

            <p class="card-text">{{ ad.price|number_format(0, '.', ' ') }}р</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    {% if app.user %}
                        {% if ad.owner.id == app.user.id or is_granted('ROLE_AGENT') %}
                            {{ ad.status }}
                        {% else %}
{#                            TODO ПРИ НАЖАТИИ НА СЕРДЕЧКО ФОРМА ФИЛЬТРОВ СОХРАНЯЕТСЯ#}
                            {% if current_template=="client_favorite_all" or ad in  app.user.favoriteAds %}
                                <a href="{{ path('client_favorite_remove', {'id_ad': ad.id, 'id_client': app.user.id, 'current_template':current_template}) }}">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16"
                                         height="16" fill="currentColor"
                                         class="bi bi-heart-fill" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd"
                                              d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
                                    </svg>
                                </a>
                            {% else %}
                                <a href="{{ path('client_favorite_create', {'id_ad': ad.id, 'id_client': app.user.id, 'current_template':current_template }) }}">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16"
                                         height="16" fill="currentColor" class="bi bi-heart"
                                         viewBox="0 0 16 16">
                                        <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"/>
                                    </svg>
                                </a>
                            {% endif %}
                        {% endif %}

                    {% endif %}
                </div>
                <small class="text-muted">{{ ad.updateDate|date_interval }}</small>
            </div>
        </div>
    </div>
</div>
