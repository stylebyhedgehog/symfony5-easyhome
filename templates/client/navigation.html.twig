{# templates/navigation.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link
            rel="stylesheet"
            href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    />
    {% block stylesheets %}{% endblock %}
</head>
<body>
<nav
        class="navbar navbar-expand-lg navbar-light bg-light"
        style="height: 70px;"
>
    <ul class="nav navbar-nav navbar-left ">
        <li><div class="nav-link text-success">Поликлиника</div></li>
        {% if app.user  %}
        <li><a class="nav-link" href="{{ path('client_ad_own_create', {'id_client': app.user.id}) }}">Добавить объявление</a></li>
        <li><a class="nav-link" href="{{ path('client_ad_own_all', {'id_client': app.user.id}) }}">Созданные объявления</a></li>

        {% endif %}
    </ul>
    <div class="collapse navbar-collapse" id="navbarSupportedContent"></div>
    <ul class="nav navbar-nav navbar-right">
        {% if app.user  %}
{#            <li><a class="nav-link" href="{{ path('user_profile', {'id_user': app.user.id}) }}">Личный кабинет</a></li>#}
            <li><a class="nav-link" href="{{ path('app_logout') }}">Выйти</a></li>
        {% else %}
            <li><a class="nav-link" href="{{ path('app_login') }}">Авторизация</a></li>
            <li>
                <a class="nav-link" href="{{ path('registration') }}">Регистрация</a>
            </li>
        {% endif %}
    </ul>
</nav>

{% block body %}{% endblock %} {% block javascripts %}{% endblock %}
</body>
</html>