{# templates/registration/greeting.html.twig #} {% extends 'client/navigation.html.twig' %} {%
    block body %}
    {% if  app.user.roles   %}
        <div class="container">
            <div class="row">
                <div class="col-md-10 ml-md-auto">
                    <div class="card bg-light mb-3 mt-5" style="width: 800px">
                        <div class="card-body">
                            <div class="card-header mb-3">Создать объявление</div>
                            {{ form_start(form) }}

                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.city, {'attr': {'class': 'form-control'} , 'label': 'Город' }) }}
                                </div>
                            </div>
                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.address, {'attr': {'class':
                                        'form-control'} ,  'label': 'Адрес'}) }}
                                </div>
                            </div>
                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.flat, {'attr': {'class':
                                        'form-control'} ,  'label': 'Квартира'}) }}
                                </div>
                            </div>
                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.sqr, {'attr': {'class':
                                        'form-control'} ,  'label': 'Площадь'}) }}
                                </div>
                            </div>
                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.description, {'attr': {'class':
                                        'form-control'} ,  'label': 'Описание'}) }}
                                </div>
                            </div>

                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(form.price, {'attr': {'class':
                                        'form-control'} ,  'label': 'Цена'}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fa fa-btn fa-user"></i> Добавить
                                    </button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <h1>Only for logged users</h1>
    {% endif %}

{% endblock %}