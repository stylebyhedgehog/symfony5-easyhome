{% extends 'navigation.html.twig' %} {% block body %}
{#    <script src="{{ asset('js/ad/price_pattern.js') }}"></script>#}
    <style>
        .carousel-item {
            width: 100%;
            height: 200px;
            overflow: hidden;
        }

        .carousel-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .nav-profile , a {
            color: black;
            text-decoration: none;
        }

        a:hover {
            color: black;
        }

        .nav-profile:hover {
            background-color: dimgrey;
            color: white;
        }

    </style>
    {% if app.user %}
        <div class="container">
            <div class="card">
                <div class="row justify-content-center">
                    {# Навигация #}
                    <div class="col-3 ">
                        <div class="nav flex-column">
                            <div class="nav-item">
                                <a class="nav-link nav-profile"
                                   href="{{ path('client_personal_data', {'id_client': app.request.get('id_client')}) }}">
                                    Личные данные
                                </a>
                            </div>
                            <div class="nav-item">
                                <a class="nav-link nav-profile"
                                   href="{{ path('client_review_all',{'id_client':app.request.get('id_client')}) }}">
                                    Отзывы
                                </a>
                            </div>
                            {% if app.user.id==app.request.get('id_client') %}

                                <div class="nav-item">
                                    <a class="nav-link nav-profile"
                                       href="{{ path('client_ad_own_all',{'id_client': app.user.id}) }}">
                                        Созданные объявления
                                    </a>
                                </div>
                                <div class="nav-item">
                                    <a class="nav-link nav-profile"
                                       href="{{ path('client_favorite_all',{'id_client':app.user.id}) }}">
                                        Избранное
                                    </a>
                                </div>
                            {% endif %}

                        </div>
                    </div>
                    {# Блоки с данными #}
                    <div class="col-9 pe-4">
                        <div class="row mb-2" >
                            <div class="col-4">
                                <small >
                                    Пользователь №{{ app.user.id }}
                                </small>
                            </div>
                        </div>
                            {% block active_block %}{% endblock %}

                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <h1>Ошибка доступа</h1>
    {% endif %}

{% endblock %}