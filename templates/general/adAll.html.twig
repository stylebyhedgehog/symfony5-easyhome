{% extends 'client/navigation.html.twig' %}
{% block body %}
    {# TODO ПЕРЕДЕЛАТЬ ЭТОТ УЖАС #}
    <script src="{{ asset('js/ad/price_pattern.js') }}"></script>
    <style>
        .carousel-item {
            width: 100%;
            height: 200px;
            overflow: hidden;
        }

        .carousel-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        a {
            color: black;
            text-decoration: none;
        }

        a:hover {
            color: dimgrey;
        }

    </style>
    {% if app.user.roles %}
        <div class="container">
            {# Поиск #}
            <div class="row ">
                <div class="input-group mb-3">
                    <input type="text" class="form-control shadow-none"
                           aria-label="Recipient's username" aria-describedby="basic-addon2">
                    <span class="input-group-text" id="basic-addon2">
                         <svg xmlns="http://www.w3.org/2000/svg" width="16"
                              height="16" fill="currentColor"
                              class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                         </svg>
                    </span>
                </div>
            </div>

            <div class="album py-5 bg-light">
                <div class="row">
                    {# Фильтры #}
                    <div class="col-3 card">
                        {% include 'general/ad/adBlockFilter.html.twig' %}

                    </div>
                    {# Объявления #}
                    <div class="col-9  ">
                        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-1">
                            {% for ad in ads %}
                                <div class="col">
                                    <div class="card shadow-sm  ">
                                        {# TODO ПОФИКСИТЬ ОТОБРАЖЕНИЕ ИЗОБРАЖЕНИЯ(ПЛАВАЮЩАЯ ВЫСОТА) #}
                                        <div id="carouselExampleIndicators{{ ad.id }}"
                                             class="carousel slide card-img-top">
                                            <div class="carousel-indicators">
                                                <button type="button"
                                                        data-bs-target="#carouselExampleIndicators{{ ad.id }}"
                                                        data-bs-slide-to="0" class="active"
                                                        aria-current="true"></button>
                                                {% if ad.images|length>1 %}
                                                    {% for i in range(0,ad.images|length -2) %}
                                                        <button type="button"
                                                                data-bs-target="#carouselExampleIndicators{{ ad.id }}"
                                                                data-bs-slide-to="{{ i+1 }}"></button>
                                                    {% endfor %}
                                                {% endif %}
                                            </div>
                                            <div class="carousel-inner">
                                                <div class="carousel-item active">
                                                    <img class="d-block w-100"
                                                         src="{{ '/images/'~ ad.images[0].filename }}">
                                                </div>
                                                {% for im in ad.images[1:] %}
                                                    <div class="carousel-item">
                                                        <img class="d-block w-100"
                                                             src="{{ '/images/'~ im.filename }}">
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        </div>

                                        <div class="card-body ">
                                            <h5 class="card-title">
                                                <a href="{{ path('general_ad_one', {'id_ad': ad.id}) }}">
                                                    {{ ad.city ~", "~ ad.address ~", "~ ad.sqr }}
                                                    <span style="white-space: nowrap;"> м<sup>2</sup></span>
                                                </a>
                                            </h5>

                                            {# TODO ПЕРЕДЕЛАТЬ И ЭТОТ УЖАС #}
                                            <p  class="card-text" id="price_for_{{ ad.id }}"></p>
                                            <script>ident_set({{ ad.price }},{{ ad.id }})</script>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="btn-group">
                                                    {% if ad.id in favorites_id %}
                                                        <a href="{{ path('client_favorite_remove', {'id_ad': ad.id, 'id_client': app.user.id, 'current_template':'general_ad_all'}) }}"  >
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                                                                <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
                                                            </svg>
                                                        </a>
                                                    {%else %}
                                                        <a href="{{ path('client_favorite_create', {'id_ad': ad.id, 'id_client': app.user.id, 'current_template':'general_ad_all' }) }}" >
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                                                                <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"/>
                                                            </svg>
                                                        </a>
                                                    {% endif %}
                                                </div>
                                                <small class="text-muted">{{ ad.updateDate|date("d.m.Y H:i") }}</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <h1>Only for logged users</h1>
    {% endif %}


{% endblock %}